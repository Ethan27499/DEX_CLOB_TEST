{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./contracts/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "typechain-types",
    "artifacts",
    "cache"
  ]
}
